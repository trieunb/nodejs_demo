<html>
  <head>
    <title>Socket.IO chat</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <style>
      * { 
        margin: 0; 
        padding: 0; 
        box-sizing: 
        border-box; 
      }
      body { 
        font: 13px Helvetica, Arial; 
      }
      form { 
        background: #000; 
        padding: 3px; 
        position: fixed; 
        bottom: 0; 
        width: 100%; 
      }
      form input { 
        border: 0; 
        padding: 10px; 
        width: 80%; 
        margin-right: .5%; 
      }
      form button { 
        width: 9%; background: rgb(130, 224, 255); border: none; padding: 10px; 
      }
      #messages { 
        list-style-type: none; margin: 0; padding: 0; 
        overflow-y: scroll;
        height: 90%;
      }
      #messages li { 
        padding: 5px 10px; 
        margin: 5px 5px; 
      }
      /*#messages li:nth-child(odd) { background: #eee; }*/
      .user_own {
        text-align: right;
        color: #286090;
        background: #eee;
        border: 1px solid #ddd;
      }
    </style>
  </head>
  <body>
    <ul id="messages">
      <% for (var i = 0; i < mess.length; i++) { %>
        <% var msg_class = '' %>
        <% if(mess[i].user_own == user_own) { %>
          <% msg_class = 'user_own' %>
        <% } else { %>
          <% msg_class = 'user_receive' } %>
        <li class="<%= msg_class %>"><%= mess[i].content %></li>
      <% } %>
    </ul>
    <form action="">
      <input id="chat-box" autocomplete="off" />
      <input type="text" class="user-own hidden" value="<%= user_own %>">
      <input type="text" class="user-receive hidden" value="<%= user_receive %>">
      <button>Send</button>
    </form>
  </body>
  <script src="/socket.io/socket.io.js"></script>
  <!-- jQuery -->
    <script src="//code.jquery.com/jquery.js"></script>
    <!-- Bootstrap JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
  <script src="/chat.js"></script>

</html>